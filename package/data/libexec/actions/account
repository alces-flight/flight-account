# vim: set filetype=sh :
action=$1
shift
cw_BINNAME="${cw_BINNAME} $(basename "$0")"

case $action in
    h|he|hel|help)
        exec ruby \
          "${cw_ROOT}"/opt/flight-account/bin/flight-account --help "$@"
        ;;
    logi|login)
         exec ruby \
           "${cw_ROOT}"/opt/flight-account/bin/flight-account login "$@"
         ;;
    logo|logou|logout)
         exec ruby \
           "${cw_ROOT}"/opt/flight-account/bin/flight-account logout "$@"
         ;;
     s|su|sub|subs|subsc|subscr|subscri|subscrib|subscribe)
         exec ruby \
           "${cw_ROOT}"/opt/flight-account/bin/flight-account subscribe "$@"
         ;;
    *)
        cat <<EOF
Usage: $cw_BINNAME COMMAND [[OPTION]... [ARGS]]
Find help for your research environment.

Commands:
EOF
printf "  %-22s  %s\n" "$cw_BINNAME help" "More help about this command."
printf "  %-22s  %s\n" "$cw_BINNAME login" "Log in to your Alces Flight account."
printf "  %-22s  %s\n" "$cw_BINNAME logout" "Log out of your Alces Flight account."
printf "  %-22s  %s\n" "$cw_BINNAME subscribe" "Create a new Alces Flight account"
cat <<EOF

Please report bugs to support@alces-software.com
Alces Software home page: <http://alces-software.com/>
EOF
esac

